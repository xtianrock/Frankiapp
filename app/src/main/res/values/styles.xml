<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.borrador">
        <item name="colorPrimary">@color/colorBorrador</item>
        <item name="colorPrimaryDark">@color/colorBorrador_dark</item>
        <item name="colorAccent">@color/colorBorrador_accent</item>
    </style>
    <style name="AppTheme.NoActionBar.presentada">
        <item name="colorPrimary">@color/colorPresentada</item>
        <item name="colorPrimaryDark">@color/colorPresentada_dark</item>
        <item name="colorAccent">@color/colorPresentada_accent</item>
    </style>
    <style name="AppTheme.NoActionBar.firmada">
        <item name="colorPrimary">@color/colorFirmada</item>
        <item name="colorPrimaryDark">@color/colorfirmada_dark</item>
        <item name="colorAccent">@color/colorfirmada_accent</item>
    </style>
    <style name="AppTheme.NoActionBar.ok">
        <item name="colorPrimary">@color/colorOK</item>
        <item name="colorPrimaryDark">@color/colorOK_dark</item>
        <item name="colorAccent">@color/colorOK_accent</item>
    </style>
    <style name="AppTheme.NoActionBar.ko">
        <item name="colorPrimary">@color/colorKO</item>
        <item name="colorPrimaryDark">@color/colorKO_dark</item>
        <item name="colorAccent">@color/colorKO_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
